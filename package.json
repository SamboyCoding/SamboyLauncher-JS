{
    "name": "samboylauncher",
    "version": "1.0.0-rc7",
    "description": "Minecraft Launcher - see https://launcher.samboycoding.me",
    "main": "src/main/index.js",
    "scripts": {
        "release": "electron-builder"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/chalk": "^2.2.0",
        "@types/download": "^6.2.2",
        "@types/electron-is-dev": "^0.3.0",
        "@types/hasha": "^3.0.0",
        "@types/jsonfile": "^4.0.1",
        "@types/jszip": "^3.1.4",
        "@types/mkdirp": "^0.5.2",
        "@types/node-fetch": "^2.1.2",
        "@types/rmfr": "^2.0.0",
        "@types/unzipper": "^0.9.0",
        "babel-eslint": "^9.0.0",
        "electron": "^2.0.8",
        "electron-builder": "^20.28.4",
        "eslint": "^5.5.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-node": "^7.0.1",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-standard": "^4.0.0",
        "tslint": "^5.11.0",
        "tslint-eslint-rules": "^5.4.0",
        "typescript": "^3.0.3"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.3.1",
        "asar": "^0.14.3",
        "chalk": "^2.4.1",
        "download": "^7.1.0",
        "electron-updater": "^3.1.2",
        "hasha": "^3.0.0",
        "jsonfile": "^5.0.0",
        "jszip": "^3.1.5",
        "lzma": "^2.3.2",
        "mkdirp": "^0.5.1",
        "node-fetch": "^2.2.0",
        "rmfr": "^2.0.0",
        "semver": "^5.5.1",
        "unzipper": "^0.9.3",
        "vue": "^2.5.17"
    },
    "build": {
        "appId": "me.samboycoding.samboylauncherjs",
        "productName": "SamboyLauncher",
        "artifactName": "SBLauncher-${version}-${os}-${arch}.${ext}",
        "publish": [
            {
                "provider": "github",
                "repo": "SamboyLauncher-JS",
                "owner": "SamboyCoding"
            }
        ],
        "mac": {
            "category": "public.app-category.games",
            "target": [
                "dmg"
            ]
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "category": "Game",
            "icon": "build/icon.png",
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        }
    }
}