{
    "name": "samboylauncher",
    "version": "2.0.0-pre",
    "description": "Minecraft Launcher - see https://launcher.samboycoding.me",
    "main": "src/main/index.js",
    "scripts": {
        "postinstall": "electron-rebuild",
        "watch-typescript": "tsc -p tsconfig.json --watch",
        "watch-renderer": "webpack --mode=development --watch",
        "watch": "concurrently \"npm:watch-*\"",
        "build-typescript": "tsc -p tsconfig.json",
        "build-renderer": "webpack --mode=production",
        "build-all": "yarn build-typescript && yarn build-renderer",
        "start": "yarn build-all && electron . --enable-sandbox",
        "start-dev": "concurrently -k \"npm:watch\" \"electron --inspect=5858 ./src/main --enable-sandbox\"",
        "release": "yarn build-all && electron-builder"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/download": "^6.2.2",
        "@types/electron": "^1.6.10",
        "@types/electron-is-dev": "^0.3.0",
        "@types/hasha": "3.0.0",
        "@types/jsonfile": "^5.0.0",
        "@types/jszip": "^3.1.4",
        "@types/mkdirp": "^0.5.2",
        "@types/node-fetch": "^2.1.2",
        "@types/rmfr": "^2.0.0",
        "@types/unzipper": "^0.9.0",
        "concurrently": "^4.1.0",
        "css-loader": "^2.1.1",
        "electron": "^5.0.0-beta.8",
        "electron-builder": "^20.39.0",
        "electron-rebuild": "^1.8.4",
        "file-loader": "^3.0.1",
        "node-sass": "^4.11.0",
        "sass-loader": "^7.1.0",
        "ts-loader": "^5.3.3",
        "tslint": "^5.15.0",
        "tslint-eslint-rules": "^5.4.0",
        "typescript": "^3.4.1",
        "vue-loader": "^15.7.0",
        "vue-property-decorator": "^8.1.0",
        "vue-template-compiler": "^2.6.10",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.0"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.3.1",
        "asar": "^1.0.0",
        "chalk": "^2.4.1",
        "download": "^7.1.0",
        "electron-is-dev": "^1.0.1",
        "electron-updater": "^4.0.6",
        "hasha": "3.0.0",
        "jsonfile": "^5.0.0",
        "jszip": "^3.1.5",
        "lzma": "^2.3.2",
        "mkdirp": "^0.5.1",
        "moment": "^2.24.0",
        "node-fetch": "^2.2.0",
        "rmfr": "^2.0.0",
        "semver": "^6.0.0",
        "source-map-support": "^0.5.11",
        "unzipper": "^0.9.3",
        "vue": "^2.6.10",
        "vuex": "^3.1.0"
    },
    "build": {
        "appId": "me.samboycoding.samboylauncherjs",
        "productName": "SamboyLauncher",
        "artifactName": "SBLauncher-${version}-${os}-${arch}.${ext}",
        "publish": [
            {
                "provider": "github",
                "repo": "SamboyLauncher-JS",
                "owner": "SamboyCoding"
            }
        ],
        "mac": {
            "category": "public.app-category.games",
            "target": [
                "dmg"
            ]
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "category": "Game",
            "icon": "build/icon.png",
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        }
    }
}
