{
    "compilerOptions": {
        "strict": false,
        "target": "esnext",
        "module": "commonjs",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "exclude": [
        "../../node_modules",
        "../renderer/**",
        "**/*.vue",
        "lib"
    ]
}
