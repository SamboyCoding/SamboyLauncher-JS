{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "indent": [
            true,
            "spaces"
        ],
        "no-constant-condition": true,
        "ter-indent": [
            true,
            4
        ],
        "no-console": false,
        "max-line-length": false,
        "max-classes-per-file": false,
        "await-promise": [
            true
        ],
        "no-unsafe-any": false,
        "no-any": false,
        "forin": false,
        "no-bitwise": false,
        "arrow-parens": false,
        "curly": false,
        "one-variable-per-declaration": false
    },
    "rulesDirectory": [
        "node_modules/tslint-eslint-rules/dist/rules"
    ]
}